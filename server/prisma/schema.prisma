generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(uuid())
  title       String
  description String
  price       Float
  inventory   Int
  variants    Variant[]
  orderItems  OrderItem[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("products")
}

model Variant {
  id        String    @id @default(uuid())
  name      String
  price     Float
  color     String?
  size      String?
  image     String
  productId String
  product   Product   @relation(fields: [productId], references: [id])
  orderItems OrderItem[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("variants")
}

model Order {
  id          String      @id @default(uuid())
  orderNumber String      @unique
  status      OrderStatus
  customer    Customer    @relation(fields: [customerId], references: [id])
  customerId  String
  payment     Payment?
  items       OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("orders")
}

model Customer {
  id          String   @id @default(uuid())
  fullName    String
  email       String
  phoneNumber String
  address     String
  city        String
  state       String
  zipCode     String
  orders      Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("customers")
}

model Payment {
  id        String   @id @default(uuid())
  orderId   String   @unique
  order     Order    @relation(fields: [orderId], references: [id])
  total     Float
  subtotal  Float
  tax       Float
  shipping  Float
  lastFour  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payments")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  variantId String
  variant   Variant  @relation(fields: [variantId], references: [id])
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("order_items")
}

enum OrderStatus {
  PENDING
  APPROVED
  DECLINED
  ERROR
}